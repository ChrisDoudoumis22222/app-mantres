<!-- views/404.ejs -->
<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Include Bootstrap CSS if needed -->
    <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            text-align: center;
        }
        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }
        p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }
        a {
            color: #007bff;
            text-decoration: none;
            font-size: 1rem;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <h1>404 - Σελίδα Δεν Βρέθηκε</h1>

    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <p><%= errorMessage %></p>
    <% } else { %>
        <p>Η σελίδα που αναζητάτε δεν βρέθηκε. Παρακαλώ επιστρέψτε στην αρχική σελίδα.</p>
    <% } %>

    <a href="/">Επιστροφή στην αρχική σελίδα</a>

</body>
</html>
