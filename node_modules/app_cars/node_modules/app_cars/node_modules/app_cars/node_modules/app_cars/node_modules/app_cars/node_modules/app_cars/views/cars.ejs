<!-- views/cars.ejs -->
<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Existing Styles */
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            min-height: 100vh;
            padding-top: 70px; /* Offset for fixed navbar */
            padding-bottom: 40px;
            font-family: Arial, sans-serif;
        }
        .container-custom {
            max-width: 1200px;
            background-color: #ffffff;
            margin: auto;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 30px;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.02);
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
            transition: opacity 0.3s ease-in-out;
        }
        .card-img-top:loading {
            opacity: 0.5;
        }
        .pagination {
            justify-content: center;
        }
        .pagination .page-item .page-link {
            padding: 0.4rem 0.8rem;
            font-size: 0.875rem;
        }
        .alert {
            margin-top: 20px;
        }
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
        }
        @media (max-width: 768px) {
            .card-img-top {
                height: 150px;
            }
        }
        @media (max-width: 576px) {
            .card-img-top {
                height: 120px;
            }
        }
        .filter-section {
            margin-bottom: 25px;
        }
        .filter-card {
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 15px;
            background-color: #fdfdfd;
        }
        .filter-card .form-group label {
            font-weight: bold;
        }
        .filter-buttons {
            display: flex;
            justify-content: flex-end;
            margin-top: 15px;
        }
        .filter-buttons .btn {
            min-width: 150px;
            margin-left: 10px;
        }
        /* Enhanced Styles for Toggle Button */
        .toggle-filters {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .toggle-filters button {
            border: 2px solid #007bff; /* Blue border */
            background-color: #007bff; /* Blue background */
            color: #ffffff; /* White text */
            font-weight: bold; /* Bold text */
            cursor: pointer;
            font-size: 1rem;
            display: flex;
            align-items: center;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .toggle-filters button:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3;
        }
        .toggle-filters button .bi-arrow-down {
            transition: transform 0.3s;
            margin-left: 10px;
        }
        .toggle-filters button.collapsed .bi-arrow-down {
            transform: rotate(0deg);
        }
        .toggle-filters button:not(.collapsed) .bi-arrow-down {
            transform: rotate(180deg);
        }
        /* Additional Enhancements */
        .filter-card label {
            font-size: 0.95rem;
        }
        .filter-card input,
        .filter-card select {
            font-size: 0.95rem;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Αυτοκίνητα</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Εναλλαγή πλοήγηση">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% menuItems.forEach(item => { %>
                        <% if (item.dropdown && item.dropdown.length > 0) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle <%= activePage === item.page ? 'active' : '' %>" href="<%= item.href %>" id="<%= item.page %>Dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi <%= item.icon %> me-1"></i> <%= item.name %>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="<%= item.page %>Dropdown">
                                    <% item.dropdown.forEach(dropItem => { %>
                                        <li><a class="dropdown-item" href="<%= dropItem.href %>"><i class="bi <%= dropItem.icon %> me-2"></i> <%= dropItem.name %></a></li>
                                    <% }) %>
                                </ul>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link <%= activePage === item.page ? 'active' : '' %>" href="<%= item.href %>">
                                    <i class="bi <%= item.icon %> me-1"></i> <%= item.name %>
                                </a>
                            </li>
                        <% } %>
                    <% }) %>
                    <li class="nav-item">
                        <form class="d-flex my-2 my-lg-0" method="GET" action="/search">
                            <input class="form-control me-2" type="search" placeholder="Αναζήτηση" aria-label="Search" name="query">
                            <button class="btn btn-outline-success" type="submit">Αναζήτηση</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-custom my-5">
        <h2>Διαθέσιμα Αυτοκίνητα</h2>
        <!-- Filters Section -->
        <form method="GET" action="/">
            <!-- First Filter Card: Brand, Model, Fuel Type, Transmission -->
            <div class="filter-section">
                <div class="card filter-card">
                    <div class="row g-3">
                        <!-- Brand Filter -->
                        <div class="col-md-3">
                            <label for="brand" class="form-label">Μάρκα</label>
                            <select id="brand" name="brand" class="form-select" onchange="this.form.submit()">
                                <option value="">Όλες</option>
                                <% brands.forEach(brandItem => { %>
                                    <option value="<%= brandItem %>" <%= selectedBrand.toLowerCase() === brandItem.toLowerCase() ? 'selected' : '' %>><%= brandItem %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- Model Filter -->
                        <div class="col-md-3">
                            <label for="model" class="form-label">Μοντέλο</label>
                            <select id="model" name="model" class="form-select">
                                <option value="">Όλα</option>
                                <% models.forEach(modelItem => { %>
                                    <option value="<%= modelItem %>" <%= selectedModel.toLowerCase() === modelItem.toLowerCase() ? 'selected' : '' %>><%= modelItem %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- Fuel Type Filter -->
                        <div class="col-md-3">
                            <label for="fuelType" class="form-label">Τύπος Καυσίμου</label>
                            <select id="fuelType" name="fuelType" class="form-select">
                                <option value="">Όλοι</option>
                                <% fuelTypes.forEach(fuel => { %>
                                    <option value="<%= fuel %>" <%= selectedFuelType.toLowerCase() === fuel.toLowerCase() ? 'selected' : '' %>><%= fuel %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- Transmission Filter -->
                        <div class="col-md-3">
                            <label for="transmission" class="form-label">Μετάδοση</label>
                            <select id="transmission" name="transmission" class="form-select">
                                <option value="">Όλες</option>
                                <% transmissions.forEach(trans => { %>
                                    <option value="<%= trans %>" <%= selectedTransmission.toLowerCase() === trans.toLowerCase() ? 'selected' : '' %>><%= trans %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Second Filter Card: Engine Type, Body Type, Condition -->
            <div class="filter-section">
                <div class="card filter-card">
                    <div class="row g-3">
                        <!-- Engine Type Filter -->
                        <div class="col-md-4">
                            <label for="engineType" class="form-label">Τύπος Κινητήρα</label>
                            <select id="engineType" name="engineType" class="form-select">
                                <option value="">Όλοι</option>
                                <% engineTypes.forEach(engine => { %>
                                    <option value="<%= engine %>" <%= Array.isArray(selectedEngineType) ? (selectedEngineType.includes(engine) ? 'selected' : '') : (selectedEngineType === engine ? 'selected' : '') %>><%= engine %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- Body Type Filter -->
                        <div class="col-md-4">
                            <label for="bodyType" class="form-label">Τύπος Σώματος</label>
                            <select id="bodyType" name="bodyType" class="form-select">
                                <option value="">Όλοι</option>
                                <% bodyTypes.forEach(body => { %>
                                    <option value="<%= body %>" <%= Array.isArray(selectedBodyType) ? (selectedBodyType.includes(body) ? 'selected' : '') : (selectedBodyType === body ? 'selected' : '') %>><%= body %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- Condition Filter -->
                        <div class="col-md-4">
                            <label for="condition" class="form-label">Κατάσταση</label>
                            <select id="condition" name="condition" class="form-select">
                                <option value="">Όλες</option>
                                <% conditions.forEach(cond => { %>
                                    <option value="<%= cond %>" <%= Array.isArray(selectedCondition) ? (selectedCondition.includes(cond) ? 'selected' : '') : (selectedCondition === cond ? 'selected' : '') %>><%= cond %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Toggle Button for Additional Filters -->
            <div class="toggle-filters">
                <button class="btn fw-bold collapsed d-flex align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#additionalFilters" aria-expanded="false" aria-controls="additionalFilters">
                    Περισσότερα Φίλτρα <i class="bi bi-arrow-down"></i>
                </button>
            </div>

            <!-- Collapsible Additional Filters -->
            <div class="collapse" id="additionalFilters">
                <!-- Third Filter Card: Year, Mileage -->
                <div class="filter-section">
                    <div class="card filter-card">
                        <div class="row g-3">
                            <!-- Year Filters -->
                            <div class="col-md-3">
                                <label for="minYear" class="form-label">Ελάχιστο Έτος</label>
                                <input type="number" id="minYear" name="minYear" class="form-control" value="<%= minYear %>" min="1900" max="<%= new Date().getFullYear() %>" placeholder="Από">
                            </div>
                            <div class="col-md-3">
                                <label for="maxYear" class="form-label">Μέγιστο Έτος</label>
                                <input type="number" id="maxYear" name="maxYear" class="form-control" value="<%= maxYear %>" min="1900" max="<%= new Date().getFullYear() %>" placeholder="Έως">
                            </div>
                            <!-- Mileage Filters -->
                            <div class="col-md-3">
                                <label for="minMileage" class="form-label">Ελάχιστο Χιλιόμετρα</label>
                                <input type="number" id="minMileage" name="minMileage" class="form-control" value="<%= minMileage %>" min="0" placeholder="Από">
                            </div>
                            <div class="col-md-3">
                                <label for="maxMileage" class="form-label">Μέγιστο Χιλιόμετρα</label>
                                <input type="number" id="maxMileage" name="maxMileage" class="form-control" value="<%= maxMileage %>" min="0" placeholder="Έως">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Fourth Filter Card: Power, Doors, Price -->
                <div class="filter-section">
                    <div class="card filter-card">
                        <div class="row g-3">
                            <!-- Power Filters -->
                            <div class="col-md-3">
                                <label for="minPower" class="form-label">Ελάχιστη Ισχύς (kW)</label>
                                <input type="number" id="minPower" name="minPower" class="form-control" value="<%= minPower %>" min="0" placeholder="Από">
                            </div>
                            <div class="col-md-3">
                                <label for="maxPower" class="form-label">Μέγιστη Ισχύς (kW)</label>
                                <input type="number" id="maxPower" name="maxPower" class="form-control" value="<%= maxPower %>" min="0" placeholder="Έως">
                            </div>
                            <!-- Number of Doors Filter -->
                            <div class="col-md-3">
                                <label for="numberOfDoors" class="form-label">Αριθμός Πόρτας</label>
                                <select id="numberOfDoors" name="numberOfDoors" class="form-select">
                                    <option value="">Όλες</option>
                                    <% for(let i = 2; i <= 5; i++) { %>
                                        <option value="<%= i %>" <%= parseInt(selectedNumberOfDoors) === i ? 'selected' : '' %>><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                            <!-- Price Filters -->
                            <div class="col-md-3">
                                <label for="minPrice" class="form-label">Ελάχιστη Τιμή (€)</label>
                                <input type="number" id="minPrice" name="minPrice" class="form-control" value="<%= minPrice %>" min="0" step="0.01" placeholder="Από">
                                <label for="maxPrice" class="form-label mt-2">Μέγιστη Τιμή (€)</label>
                                <input type="number" id="maxPrice" name="maxPrice" class="form-control" value="<%= maxPrice %>" min="0" step="0.01" placeholder="Έως">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Buttons -->
            <div class="filter-buttons">
                <button type="submit" class="btn btn-primary">Φιλτράρισμα</button>
                <a href="/" class="btn btn-secondary ms-2">Καθαρισμός Φίλτρων</a>
            </div>
        </form>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <% if (cars && cars.length > 0) { %>
            <div class="row">
                <% cars.forEach(car => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <!-- Primary Image with onerror fallback -->
                            <img 
                                src="<%= car.images[0] %>" 
                                class="card-img-top" 
                                alt="<%= car.title %>"
                                loading="lazy"
                                onerror="this.onerror=null; this.src='https://via.placeholder.com/300x200?text=No+Image';">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= car.title %></h5>
                                <p class="card-text"><strong>Τιμή:</strong> €<%= car.price.toLocaleString('el-GR') %></p>
                                <% if (car.priceWithoutTax != null) { %>
                                    <p class="card-text"><strong>Τιμή Χωρίς Φόρο:</strong> €<%= car.priceWithoutTax.toLocaleString('el-GR') %></p>
                                <% } else { %>
                                    <p class="card-text"><strong>Τιμή Χωρίς Φόρο:</strong> Δε Διατίθεται</p>
                                <% } %>                                
                                <p class="card-text"><strong>Έτος:</strong> <%= (car.year !== "Unknown") ? car.year : 'Δε Διατίθεται' %></p>
                                <p class="card-text"><strong>Χιλιόμετρα:</strong> <%= car.mileage ? car.mileage.toLocaleString('el-GR') : 'Δε Διατίθεται' %> km</p>
                                <p class="card-text"><strong>Ισχύς:</strong> <%= (car.power !== null) ? car.power + ' kW' : 'Δε Διατίθεται' %></p>
                                <p class="card-text"><strong>Τύπος Καυσίμου:</strong> <%= (car.fuelType !== "Δε Διατίθεται") ? car.fuelType : 'Δε Διατίθεται' %></p>
                                <!-- Transmission Field -->
                                <p class="card-text"><strong>Μετάδοση:</strong> <%= car.transmission !== "Δε Διατίθεται" ? car.transmission : 'Δε Διατίθεται' %></p>
                                <p class="card-text"><strong>Αριθμός Πόρτας:</strong> <%= car.doors %></p>
                                <p class="card-text"><strong>Τύπος Κινητήρα:</strong> <%= (car.engineType !== "Δε Διατίθεται") ? car.engineType : 'Δε Διατίθεται' %></p>
                                <p class="card-text"><strong>Τύπος Σώματος:</strong> <%= (car.bodyType !== "Δε Διατίθεται") ? car.bodyType : 'Δε Διατίθεται' %></p>
                                <p class="card-text"><strong>Κατάσταση:</strong> <%= car.condition %></p>
                                <% if (car.tags && car.tags.length > 0) { %>
                                    <p class="card-text"><strong>Χαρακτηριστικά:</strong> <%= car.tags.join(', ') %></p>
                                <% } %>
                                <!-- Image Thumbnails -->
                                <p class="card-text"><strong>Διαθέσιμες Εικόνες:</strong></p>
                                <div class="d-flex flex-wrap mb-3">
                                    <% car.images.forEach(image => { %>
                                        <img 
                                            src="<%= image %>" 
                                            alt="Εικόνα <%= car.title %>" 
                                            class="img-thumbnail me-2 mb-2" 
                                            style="width: 60px; height: 60px;"
                                            loading="lazy"
                                            onerror="this.onerror=null; this.src='https://via.placeholder.com/60x60?text=No+Image';">
                                    <% }) %>
                                </div>
                                <a href="<%= car.link %>" class="btn btn-primary mt-auto">Περισσότερα</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?<%= buildQueryString(Object.assign({}, filters, { page: currentPage - 1 })) %>" aria-label="Προηγούμενη">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Προηγούμενη">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } %>

                    <% let startPage = Math.max(1, currentPage - 2); %>
                    <% let endPage = Math.min(totalPages, currentPage + 2); %>

                    <% if (startPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?<%= buildQueryString(Object.assign({}, filters, { page: 1 })) %>">1</a>
                        </li>
                        <% if (startPage > 2) { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">...</a>
                            </li>
                        <% } %>
                    <% } %>

                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/?<%= buildQueryString(Object.assign({}, filters, { page: i })) %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (endPage < totalPages) { %>
                        <% if (endPage < totalPages - 1) { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">...</a>
                            </li>
                        <% } %>
                        <li class="page-item">
                            <a class="page-link" href="/?<%= buildQueryString(Object.assign({}, filters, { page: totalPages })) %>"><%= totalPages %></a>
                        </li>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?<%= buildQueryString(Object.assign({}, filters, { page: currentPage + 1 })) %>" aria-label="Επόμενη">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Επόμενη">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } else { %>
            <p>Δεν βρέθηκαν αυτοκίνητα με τα κριτήρια αναζήτησής σας.</p>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5">
        <div class="container">
            <p class="mb-0">&copy; <%= new Date().getFullYear() %> Η Εταιρεία σας. Όλα τα δικαιώματα διατηρούνται.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS and dependencies (Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize Bootstrap tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Persist toggle state using localStorage
        document.addEventListener('DOMContentLoaded', function () {
            const additionalFilters = document.getElementById('additionalFilters');
            const toggleButton = document.querySelector('.toggle-filters button');

            // Check localStorage for toggle state
            if (localStorage.getItem('additionalFiltersState') === 'shown') {
                const bsCollapse = new bootstrap.Collapse(additionalFilters, {
                    toggle: true
                });
                toggleButton.classList.remove('collapsed');
            }

            // Listen for toggle events to save state
            additionalFilters.addEventListener('shown.bs.collapse', function () {
                localStorage.setItem('additionalFiltersState', 'shown');
            });
            additionalFilters.addEventListener('hidden.bs.collapse', function () {
                localStorage.setItem('additionalFiltersState', 'hidden');
            });
        });
    </script>
</body>
</html>
